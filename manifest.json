{
    "manifest_version": 2,
    "name": "Budget Manager",
    "version": "1.0",
    
    "description": "A tool which is used to calculate our spendings and give alert when it exceeds.",
    "icons": {
        "128": "icon128.png",
        "48": "icon48.png",
        "16": "icon16.png"
    },
    "browser_action": {
        "default_icon": "icon16.png",
        "default_popup": "popup.html"
    },
    "permissions": [
        "storage",
        "notifications"
    ],
    "background": {
        "service_worker": "background.js"
    }
}